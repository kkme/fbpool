<?xml version="1.0"?>

<project>
  <extend>../common/project.xml</extend>
  <name>Talient Football Pool Core</name>
  <artifactId>fb-core</artifactId>
  <package>com.talient.*</package>
  <shortDescription>Talient Football Pool Core library</shortDescription>
  <description>
    Talient Football Pool core library used by both command-line and
    web-based applications.
  </description>

  <dependencies>
    <dependency>
      <groupId>jdom</groupId>
      <artifactId>jdom</artifactId>
      <version>1.0</version>
    </dependency>
    <dependency>
      <groupId>javamail</groupId>
      <artifactId>mail</artifactId>
      <version>1.3.2</version>
    </dependency>
    <dependency>
      <groupId>jaf</groupId>
      <artifactId>activation</artifactId>
      <version>1.0.2</version>
    </dependency>
    <dependency>
      <groupId>servletapi</groupId>
      <artifactId>servlet-api</artifactId>
      <version>2.4</version>
    </dependency>
  </dependencies>

  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <unitTestSourceDirectory>src/main/test</unitTestSourceDirectory>
    <nagEmailAddress>contact@talient.com</nagEmailAddress>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
    </unitTest>
    <resources>
      <resource>
         <directory>
            ${basedir}/src/main/resources
         </directory>            
      </resource>
    </resources>
  </build>

</project>
